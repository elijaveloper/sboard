extends layout

block scripts
  script(src="/javascripts/sboard.js")
  link(rel="stylesheet",href="/stylesheets/sboard.css")
  link(rel="stylesheet",href="https://fontlibrary.org/face/segment7")

block content
  .content
    .row  
      .col
        .label Home
        .number#home 0
        +pointcontrols("home_points")
      .col
        .label Time
        .number#time 00:00
        +timecontrols("time")

        .label Shot
        .number#shot 00
        +timecontrols("shot")
        button(value=btn,id=id+"_"+"shotclock",onclick="shotclock('shot')") shot
      .col
        .label Away
        .number#away 0
        +pointcontrols("away_points")
    .row
      .col
        .label Home Fouls
        .number#home_foul 0
        +pointcontrols("home_fouls")
      .col
        #sponsor
      .col
        .label Away Fouls
        .number#away_foul 0
        +pointcontrols("away_fouls")

mixin timecontrols(id)
  .timecontrols
    button(value=btn,id=id+"_"+"start",onclick="start"+"('" + id + "')") start
    for btn in ["pause","stop","reset"]
      button(value=btn,id=id+"_"+btn,onclick=btn+"('" + id + "')",style={display:"none"}) #{btn}

mixin pointcontrols(id)
  .pointcontrols
    for btn in ["-1","1","2","3"]
      button(value=btn,id=id+"_"+btn,onclick=id+"(" + btn + ")") #{btn}

